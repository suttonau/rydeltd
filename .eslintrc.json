{
  "env": {
      "node": true,
      "browser": true,
      "es6": true,
  },
  "parser": "babel-eslint",
  "extends": [
      "standard"
  ],
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "rules": {
      "indent": ["error", 2],
      "linebreak-style": [
          "error",
          "unix"
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "never"
      ],
      "comma-dangle": [
          "error",
          "never"
      ],
      "max-len": [2, 100, 4, {"ignoreUrls": true}],
      "no-console": [0],
      "import/no-unassigned-import": 0,
      "eqeqeq": ["error", "always"]
  }
}
